<!-- res/drawable/progress_bar_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон прогресс бара -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Светло-серый фон прогресс бара -->
            <corners android:radius="15dp"/> <!-- Закругленные углы фона -->
        </shape>
    </item>

    <!-- Передний план прогресс бара -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#8E2DE2"
                    android:endColor="#4A00E0"
                    android:angle="270"/> <!-- Градиент от фиолетового к синему -->
                <corners android:radius="15dp"/> <!-- Закругленные углы прогресса -->
            </shape>
        </clip>
    </item>

    <!-- Обводка прогресс бара -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#800080"/> <!-- Фиолетовая обводка -->
            <corners android:radius="15dp"/> <!-- Закругленные углы для обводки -->
        </shape>
    </item>

</layer-list>

