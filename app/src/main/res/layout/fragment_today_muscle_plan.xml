<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainingMotors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".training.TodayMusclePlanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llBackgroundPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gross_motor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_active_today_muscle_plan"
                    android:padding="10dp"
                    android:text="Крупная моторика"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_fine_motor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_signup"
                    android:padding="10dp"
                    android:text="Мелкая моторика"
                    android:textColor="@color/indigo" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTrainingSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:text="Название тренировок"
                android:textAlignment="center"
                android:textColor="@color/indigo"
                android:textSize="24sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieCatPlaying"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_fileName="cat_playing.json"
                app:lottie_loop="true" />

            <ImageView
                android:id="@+id/ivPerson"
                android:layout_width="wrap_content"
                android:layout_height="700dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/boy_front" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFineMotorTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnGoToTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_active_today_muscle_plan"
                android:text="Перейти к тренировке"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="614dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:background="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>