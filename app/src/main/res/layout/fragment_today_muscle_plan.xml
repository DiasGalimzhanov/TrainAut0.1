<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainingMotors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".training.TodayMusclePlanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llBackgroundPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTrainingSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Название тренировок"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="700dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/boy_front"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintVertical_chainStyle="packed" />

                <ImageButton
                    android:id="@+id/btnBiceps"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="288dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/btnPectoralMuscles"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="204dp"
                    android:layout_marginTop="308dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnTriceps"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.358"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.458" />

                <ImageButton
                    android:id="@+id/btnDeltoidMuscles"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.598"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.379" />

                <ImageButton
                    android:id="@+id/btnPress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="204dp"
                    android:layout_marginTop="372dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnUpperBackMuscles"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="276dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnQuadriceps"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="492dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnLowerBackMuscles"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="360dp"
                    android:background="@drawable/circle_button"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnGoToTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Перейти к тренировке"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/btn1_login_back"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="614dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

