<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".training.RewardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/rewardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_trophy" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/rewardAnimationView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:lottie_fileName="confetti.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"/>
        </FrameLayout>

        <TextView
            android:id="@+id/congratulationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поздравляем, ты справился со всеми упражнениями!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/rewardDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ты заслужил награду! 🎉 Теперь у тебя +800 EXP. Продолжай в том же духе!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnReturnTrainingDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Готово, возвращаемся!"
            android:background="@drawable/btn1_login_back"
            android:textColor="@color/white"
            android:padding="12dp"/>
    </LinearLayout>
</FrameLayout>
