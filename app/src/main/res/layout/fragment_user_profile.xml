<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cloud">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Профиль"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_indigo" />

        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn_exit"  />
    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background" />

    <TextView
        android:id="@+id/child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Имя Фамилия"
        android:textSize="18sp"
        android:textColor="@color/indigo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/child_gender_diagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="Пол: Мальчик • Диагноз: ASD"
        android:textSize="14sp"
        android:textColor="@color/dark_indigo" />

    <TextView
        android:id="@+id/child_height_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="Рост: 120 см • Вес: 25 кг"
        android:textSize="14sp"
        android:textColor="@color/dark_indigo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/parent_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Информация о родителe"
            android:textSize="16sp"
            android:textColor="@color/indigo"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя: Иван Иванов"
            android:textSize="16sp"
            android:textColor="@color/dark_indigo" />

        <TextView
            android:id="@+id/parent_bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возраст: 35 лет"
            android:textSize="16sp"
            android:textColor="@color/dark_indigo" />

        <TextView
            android:id="@+id/parent_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Город: Москва"
            android:textSize="14sp"
            android:textColor="@color/dark_indigo" />

        <TextView
            android:id="@+id/parent_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Почта: ivanov@mail.com"
            android:textSize="16sp"
            android:textColor="@color/dark_indigo" />

        <TextView
            android:id="@+id/parent_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон: +7 999 123 45 67"
            android:textSize="16sp"
            android:textColor="@color/dark_indigo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/notes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Заметки о ребенке"
            android:drawableStart="@drawable/ic_note"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn1_login_back" />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Редактировать профиль"
            android:drawableStart="@drawable/ic_edit"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn1_login_back" />

        <Button
            android:id="@+id/support_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Служба поддержки"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/bottom_btn3"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn1_login_back" />

        <Button
            android:id="@+id/watch_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подключить часы"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_watch"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn1_login_back" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить аккаунт"
            android:drawableStart="@drawable/ic_delete"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/ic_exit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:background="@color/white" />

    </LinearLayout>
</LinearLayout>
</ScrollView>
