<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainTraining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".TrainingDashboardFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btnProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn1_login_back"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/level_up" />

                <TextView
                    android:id="@+id/tvLvlDashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="18dp"
                    android:text="Прогресс"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvExpDashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Первая кнопка с подписью -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btnExercisesMotor"
                        android:layout_width="190dp"
                        android:layout_height="150dp"
                        android:background="@drawable/ic_ex"
                        android:textColor="@color/indigo"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Упражнения на моторику"
                        android:textColor="@color/indigo"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Вторая кнопка с подписью -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btnAAC"
                        android:layout_width="190dp"
                        android:layout_height="150dp"
                        android:background="@drawable/ic_brain"
                        android:textColor="@color/disabledColorButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Альтернативная коммуникация (AAC)"
                        android:textColor="@color/indigo"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/btn1_login_back"
                android:numColumns="7"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>