<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="@string/authorization"
            android:textColor="@color/dark_indigo"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:text="@string/login_label"
            android:textColor="@color/dark_indigo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_signup"
            android:drawableStart="@drawable/ic_email"
            android:ems="10"
            android:hint="@string/enter_email_hint"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/indigo"
            android:textColorHint="@color/violet_blossom"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:text="@string/password_label"
            android:textColor="@color/dark_indigo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_signup"
            android:drawableStart="@drawable/ic_pass"
            android:ems="10"
            android:hint="@string/enter_password_hint"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/indigo"
            android:textColorHint="@color/violet_blossom"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvForgotPas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="@string/forgot_password"
            android:textColor="@color/bright_sky_blue"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnLogin"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn1_login_back"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/register_prompt"
            android:textAlignment="center"
            android:textColor="@color/bright_sky_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/violet_blossom" />
    </LinearLayout>
</ScrollView>
