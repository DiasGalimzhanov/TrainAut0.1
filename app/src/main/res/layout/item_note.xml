<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/btn1_intro_back"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgNoteIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_note"
        android:contentDescription="Иконка упражнения"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvNoteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заметка"
        android:textSize="16sp"
        android:textColor="@color/dark_indigo"
        android:gravity="center_vertical" />
</LinearLayout>
